---
import { formatISODate } from '../utils/format';

const {
  href,
  title,
  excerpt,
  date,
  tag,
  badge = '随笔'
} = Astro.props;
---

<a class="list-item list-item--link" href={href}>
  <div class="list-item__row">
    <div style="display:flex; align-items:center; gap:10px;">
      {badge ? <span class="badge">{badge}</span> : null}
      <h3 class="list-item__title" style="margin:0;">{title}</h3>
    </div>
  </div>
  {excerpt ? <p class="list-item__excerpt">{excerpt}</p> : null}
  <div class="meta-line">
    发布于：{formatISODate(date)}
    {tag ? <> · <span class="tag">#{tag}</span></> : null}
  </div>
</a>
